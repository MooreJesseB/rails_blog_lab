<!-- show.html.erb -->

<div>
	<h2 class="text-center"><%= @post.title %></h2>
	<p>Author: <%= @post.author %></p>
	<p><%= @post.body %></p>
	<p>Last updated: <%= @post.updated_at %></p><br><br>
	<h3 class="text-center">Comment:</h3><br>
	<h4 class="text-center"><%= @comment.title %></h3><br>
	<p><%= @comment.body %></p><br>
	<form action="/posts/<%= @post.id %>/comments/<%= @comment.id %>/edit" method="get">
		<button class="btn text-center">Edit comment</button>
	</form><br>
	<form action="/posts/<%= @post.id %>" method="get">
		<button class="btn text-center">View post</button>
	</form>
</div>